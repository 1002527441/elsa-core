        <PackageReference Include="YesSql.Provider.MySql" Version="1.0.0-beta-1449" />
        <PackageReference Include="YesSql.Provider.PostgreSql" Version="1.0.0-beta-1449" />
        <PackageReference Include="YesSql.Provider.Sqlite" Version="1.0.0-beta-1449" />
        <PackageReference Include="YesSql.Provider.SqlServer" Version="1.0.0-beta-1449" />
    </ItemGroup>

</Project>
